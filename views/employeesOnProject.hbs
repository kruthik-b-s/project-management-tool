<nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb" id="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <button id="home" class="btn btn-link">Home</button>
        </li>
        <li class="breadcrumb-item">
            <a href="/api/project/projects?status=on-going&page=1&perPage=5">View Projects</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/api/project/projectDetails/{{employees.project_id}}">Project Details</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Employee On Project
        </li>
    </ol>
</nav>

<div class="employee-table">
    <div class="title">
        <p>Employees list</p>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Employee Name</th>
                <th scope="col">Department</th>
            </tr>
        </thead>
        <tbody>
            {{#each employees.employees}}
            <tr>
                <th>{{this.employee_id}}</th>
                <td><a href="/api/employee/getEmployee/{{this.employee_id}}">{{this.employee_name}}</a></td>
                <td>{{this.department}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination" id="pages">{{employees.totalPages}}</ul>
    </nav>
</div>

<script src="/scripts/breadcrumb-nav.js"></script>
<script src="/scripts/view-employees.js"></script>